<LoginScreen>:
    ScreenBackground
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'

        BoxLayout:
            orientation: 'vertical'
            size_hint: None, None
            size: 300, 200
            spacing: 10

            Spinner:
                id: username_spinner
                text: 'Выберите пользователя'
                color: 0, 0, 0, 1
                size_hint_y: None
                height: 40

            Spinner:
                id: language_spinner
                text: 'Выберите язык'
                color: 0, 0, 0, 1
                size_hint_y: None
                height: 40

            Button:
                id: login_button
                text: 'Войти'
                color: 0, 0, 0, 1
                size_hint_y: None
                height: 40
                on_press: root.login()

            Button:
                id: register_button
                text: 'Зарегистрироваться'
                color: 0, 0, 0, 1
                size_hint_y: None
                height: 40
                on_press: root.goto_screen('register')