<MainMenuScreen>:
    canvas.before:
        Color:
            rgba: 0.7, 0.86, 0.71, 1  # Цвет фона (светло-серый)
        Rectangle:
            pos: self.pos
            size: self.size
    AnchorLayout:
        anchor_x: 'left'
        anchor_y: 'top'
        BoxLayout:
            orientation: 'horizontal'
            size_hint: None, None
            size: 200, 50

            Label:
                text: 'Пользователь:' + root.current_user_name
                color: 0, 0, 0, 1
                size_hint_y: None
                height: 40

    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'

        BoxLayout:
            orientation: 'vertical'
            size_hint: None, None
            size: 300, 200
            spacing: 10

            Label:
                text: 'Главное меню'
                color: 0, 0, 0, 1
                size_hint_y: None
                height: 40

            Button:
                id: show_dictionary_button
                text: 'Показать словарь'
                color: 0, 0, 0, 1
                size_hint_y: None
                height: 40
                on_press: root.show_dictionary()

            Button:
                text: 'Показать тренировки'
                color: 0, 0, 0, 1
                size_hint_y: None
                height: 40
