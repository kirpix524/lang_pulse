<RegisterScreen>:
    canvas.before:
        Color:
            rgba: 0.7, 0.86, 0.71, 1  # Цвет фона (светло-серый)
        Rectangle:
            pos: self.pos
            size: self.size
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'

        BoxLayout:
            orientation: 'vertical'
            size_hint: None, None
            size: 300, 200
            spacing: 10
            TextInput:
                id: username_input
                hint_text: 'Введите имя пользователя'
                multiline: False
                size_hint_y: None
                height: 40
                font_size: 18

            Button:
                id: submit_button
                text: 'Создать и войти'
                color: 0, 0, 0, 1
                size_hint_y: None
                height: 40
                on_press: root.register()