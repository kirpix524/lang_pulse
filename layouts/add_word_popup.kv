<AddWordPopup>:
    title: "Новое слово"
    size_hint: None, None
    size: 400, 400
    auto_dismiss: True

    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        padding: 10

        Label:
            text: "Добавление слова"
            size_hint_y: None
            height: 30

        TextInput:
            id: word_input
            hint_text: "Слово"
            multiline: False

        TextInput:
            id: transcription_input
            hint_text: "Транскрипция"
            multiline: False

        TextInput:
            id: translation_input
            hint_text: "Перевод"
            multiline: False

        Button:
            text: "Добавить"
            size_hint_y: None
            height: 40
            on_press: root.add_word()