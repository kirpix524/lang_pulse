<DictionaryScreen>:
    canvas.before:
        Color:
            rgba: 0.7, 0.86, 0.71, 1  # Цвет фона (светло-серый)
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 10

        Label:
            text: 'Словарь'
            font_size: '24sp'
            color: 0, 0, 0, 1

        # Здесь можно будет добавить список слов, кнопки и т.д.

        Button:
            text: 'Назад'
            size_hint_y: None
            height: 40
            on_press: app.root.current = 'main_menu'