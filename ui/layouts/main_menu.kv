<MainMenuScreen>:
    ScreenBackground
    UserInfoPanel
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'

        BoxLayout:
            orientation: 'vertical'
            size_hint: None, None
            size: 300, 200
            spacing: 10

            Label:
                text: 'Главное меню'
                color: 0, 0, 0, 1
                size_hint_y: None
                height: 40

            Button:
                id: show_dictionary_button
                text: 'Показать общий словарь'
                color: 0, 0, 0, 1
                size_hint_y: None
                height: 40
                on_press: root.goto_screen('dictionary')

            Button:
                id: show_user_dictionary_button
                text: 'Показать словарь пользователя'
                color: 0, 0, 0, 1
                size_hint_y: None
                height: 40
                on_press: root.goto_screen('user_dictionary')

            Button:
                text: 'Показать тренировки'
                color: 0, 0, 0, 1
                size_hint_y: None
                height: 40
                on_press: root.goto_screen('session_list')

            Button:
                text: 'Статистика по словам'
                color: 0, 0, 0, 1
                size_hint_y: None
                height: 40
                on_press: root.goto_screen('word_stats')

            Button:
                text: 'Выйти'
                color: 0, 0, 0, 1
                size_hint_y: None
                height: 40
                on_press: root.goto_screen('login')
